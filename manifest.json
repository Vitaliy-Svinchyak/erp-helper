{
  "manifest_version": 2,
  "name": "Mango automation",
  "description": "For help",
  "version": "1.3",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "easy breezy"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content-scripts/helper.js",
        "content-scripts/filler.js",
        "content-scripts/achivementHelper.js",
        "content-scripts/content.js"
      ],
      "css": [
        "content-scripts/content.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "plugin-scripts/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}